# Sanity Studio Environment Variables
# Copy this file to .env and fill in your actual values

# Sanity Project Configuration
SANITY_STUDIO_PROJECT_ID=your_project_id
SANITY_STUDIO_DATASET=production

# API Configuration
SANITY_STUDIO_API_VERSION=2023-10-17
SANITY_STUDIO_BASE_PATH=/

# Authentication tokens (get from sanity.io/manage)
SANITY_AUTH_TOKEN=
SANITY_STUDIO_READ_TOKEN=
SANITY_STUDIO_WRITE_TOKEN=

# Database URLs and secrets
DATABASE_URL=
JWT_SECRET=

# Third-party service keys
STRIPE_SECRET_KEY=
SENDGRID_API_KEY=
CLOUDINARY_API_SECRET=

# Local development settings
NODE_ENV=development
DEBUG=true